<Application x:Class="ToDoApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ToDoApp"
             StartupUri="View\MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButtonsBasicStyle">
            <Setter Property="Control.FontSize" Value="18"/>
            <Setter Property="Control.Cursor" Value="Hand"/>
            <Setter Property="Control.FontFamily" Value="Segoe UI"/>
            <Setter Property="Control.Foreground" Value="#FF997BEA"/>
            <Setter Property="Control.Background" Value="#FFFDD97A"/>
        </Style>
    </Application.Resources>
</Application>
